## Passwords are stored in an ecnrypted file which is sourced within muttrc before sourcing this mailbox

# Main account ----------------------------------
color status green default

# Configure imap username and password
set imap_user = "email1@protesilaos.com"
set imap_pass = "$my_secret_pass"

# Configure folders
set folder = "imaps://$imap_user@mail.gandi.net:993"
set spoolfile= "=INBOX"
set record = "=Sent"
set postponed= "=Drafts"
set trash= "=Trash"
mailboxes = "=INBOX" "=Sent"

# Configure SMTP Settings
set smtp_url = "smtp://$imap_user:$imap_pass@mail.gandi.net:587/"
set realname = "Protesilaos Stavrou"
set from = "email1@protesilaos.com"
set hostname = "mail.gandi.net"
set use_from = yes
# Connection options
set ssl_force_tls = yes
unset ssl_starttls

## Hook -- IMPORTANT!
account-hook *email1@protesilaos.com "set imap_user=email1@protesilaos.com imap_pass=$my_secret_pass"
