<actions>
<action>
	<icon>utilities-terminal-symbolic</icon>
	<name>Copy Path</name>
	<unique-id>1492847315113323-3</unique-id>
	<command>echo -n %f | xclip -selection &quot;clipboard&quot;</command>
	<description>Copies the current path to the system clipboard</description>
	<upper>-1</upper>
	<lower>-1</lower>
	<patterns>*</patterns>
	<directories/>
	<audio-files/>
	<image-files/>
	<other-files/>
	<text-files/>
	<video-files/>
</action>
<action>
	<icon>clipman-symbolic</icon>
	<name>Copy Content</name>
	<unique-id>1492780290441767-11</unique-id>
	<command>cat &quot;%F&quot; | xclip -i -selection clipboard</command>
	<description>Copies the content of the selected file to the clipboard</description>
	<upper>-1</upper>
	<lower>-1</lower>
	<patterns>*</patterns>
	<text-files/>
</action>
<action>
	<icon>file-roller-symbolic</icon>
	<name>Flatten Folder</name>
	<unique-id>1492780052566243-6</unique-id>
	<command>find . -mindepth 2 -type f -exec mv &quot;{}&quot; . \; &amp;&amp; find . -type d -empty -delete</command>
	<description>Moves all files from sub-folders to parent (current) folder, then removes all empty folders inside the current folder.</description>
	<upper>-1</upper>
	<lower>-1</lower>
	<patterns>*</patterns>
	<directories/>
</action>
<action>
	<icon>libreoffice-base-symbolic</icon>
	<name>Prune</name>
	<unique-id>1492850271117318-13</unique-id>
	<command>find . -type d -empty -delete</command>
	<description>Deletes all empty folders</description>
	<upper>-1</upper>
	<lower>-1</lower>
	<patterns>*</patterns>
	<directories/>
