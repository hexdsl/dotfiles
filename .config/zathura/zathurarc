# general opions
set zoom-step 20
set scroll-step 80
set selection-clipboard clipboard
set incremental-search true
set font "Hack regular 10"
set statusbar-home-tilde true
set zoom-center true

# keybindings
map <C-=> zoom in
map <C--> zoom out
map <C-0> adjust_window width
map <C-9> adjust_window best-fit
map F display_link
map J navigate next
map K navigate previous
map <C-,> toggle_statusbar
map <C-i> toggle_index
map <C-r> toggle_page_mode
map <Space> goto

# colour scheme (Hinterland - https://protesilaos.com/hinterland)
set default-fg "#3d463f"
set default-bg "#f9f8fc"
set completion-bg "#12171B"
set completion-fg "#8aa0a4"
set completion-group-bg "#22272B"
set completion-group-fg "#217ab3"
set completion-highlight-bg "#3D814C"
set completion-highlight-fg "#f9f8fc"
set inputbar-bg "#22272B"
set inputbar-fg "#8aa0a4"
set statusbar-bg "#12171B"
set statusbar-fg "#60604f"
set highlight-color "#ad5c5b"
set highlight-active-color "#7d6cab"
set notification-bg "#3d463f"
set notification-fg "#f9f8fc"
set notification-error-bg "#983f16"
set notification-error-fg "#f9f8fc"
set notification-warning-bg "#b09020"
set notification-warning-fg "#f9f8fc"
