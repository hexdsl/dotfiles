[module/pkg]
type = custom/script
interval = 1200
format = <label>
format-background = ${colors.dhl}
format-underline = ${colors.blu}
label = "%output:0:30%"
label-padding = 2
exec = .config/polybar/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"
click-left = urxvt -e sudo pacman -Syu &
click-right = urxvt -e pacaur -Syu --aur &

