;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
dbg = #07040A
dhl = #221a25
dt2 = #898440
dt1 = #9eb0b5
lbg = #f9f9f9
lhl = #e9e9e9
lt2 = #4b5d6b
lt1 = #202819
red = #DD3816
ora = #BE5A14
yel = #897600
gre = #1A891C
cya = #437E93
blu = #3575D4
vio = #8764C4
mag = #DC3259

[bar/example]
width = 100%
height = 28
fixed-center = true
override-redirect = false

background = ${colors.dbg}
foreground = ${colors.dt1}

line-size = 3
line-color = ${colors.red}

border-size = 0
border-color = #f00

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = Iosevka Term:pixelsize=10:antialias=true;1
font-1 = Iosevka Term Medium:pixelsize=9:antialias=true;1
font-2 = Iosevka Term Light:pixelsize=12:antialias=true;1
font-3 = unifont:fontformat=truetype:size=10:antialias=false;2
font-4 = siji:pixelsize=10;2

modules-left = i3 mpd
modules-center = date
modules-right = volume xkeyboard pkg powermenu
tray-position = right
tray-padding = 0

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

label-layout = %layout%
label-layout-padding = 1
label-layout-underline = ${colors.yel}

label-indicator = %name%
label-indicator-padding = 1
label-indicator-margin = 1
label-indicator-background = ${colors.yel}
label-indicator-foreground = ${colors.lbg}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.dhl}
label-focused-underline= ${colors.gre}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${colors.red}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.dt1}
label-empty-padding = 1

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.gre}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.red}
label-urgent-foreground = ${colors.dbg}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

[module/mpd]
type = internal/mpd
format-online = <icon-prev> <toggle> <icon-next> <label-song> <label-time>

icon-prev = «
icon-prev-padding = 1
icon-prev-background = ${colors.dhl}
icon-prev-foreground = ${colors.dt1}
icon-play = >
icon-play-padding = 1
icon-play-background = ${colors.dhl}
icon-play-foreground = ${colors.dt1}
icon-pause = !
icon-pause-padding = 1
icon-pause-background = ${colors.dhl}
icon-pause-foreground = ${colors.dt1}
icon-next = »
icon-next-padding = 1
icon-next-background = ${colors.dhl}
icon-next-foreground = ${colors.dt1}

label-song = %title% - %artist% [%album%] 
label-song-maxlen = 60
label-song-ellipsis = true
label-offline = ERR mpd is offline

[module/date]
type = internal/date
interval = 5

date = "%a, %Y-%m-%d,"
time = "%H:%M"

format-prefix-foreground = ${colors.dt2}
format-underline = ${colors.ora}

label = %date% %time%

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = §
label-volume-foreground = ${colors.dt1}

format-muted-background = ${colors.dhl}
format-muted-foreground = ${colors.dt1}
format-muted-padding = 2
label-muted = Sound Muted

bar-volume-width = 20
bar-volume-foreground-0 = ${colors.cya}
bar-volume-foreground-1 = ${colors.vio}
bar-volume-foreground-2 = ${colors.ora}
bar-volume-foreground-3 = ${colors.mag}
bar-volume-foreground-4 = ${colors.red}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = —
bar-volume-fill-font = 2
bar-volume-empty = —
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.dt1}

[module/pkg]
type = custom/script
interval = 1200
format = <label>
format-underline = ${colors.mag}
label = "%output:0:30%"
label-padding = 1
exec = .config/polybar/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/powermenu]
type = custom/menu
label-open = "Ø"
label-open-font = 3
label-open-background = ${colors.dhl}
label-open-foreground = ${colors.dt1}
label-open-underline = ${colors.red}
label-open-padding = 2
label-close = "X"
label-close-background = ${colors.dhl}
label-close-foreground = ${colors.blu}
label-close-padding = 2

menu-0-0 = "Lock"
menu-0-0-padding = 2
menu-0-0-background = ${colors.cya}
menu-0-0-foreground = ${colors.lbg}
menu-0-0-exec = "bash ~/.config/i3/lock.sh"
menu-0-1 = "Switch Users"
menu-0-1-padding = 2
menu-0-1-background = ${colors.vio}
menu-0-1-foreground = ${colors.lbg}
menu-0-1-exec = "dm-tool switch-to-greeter"
menu-0-2 = "Log Out"
menu-0-2-padding = 2
menu-0-2-background = ${colors.ora}
menu-0-2-foreground = ${colors.lbg}
menu-0-2-exec = i3-msg exit, mode "default"
menu-0-3 = "Reboot"
menu-0-3-padding = 2
menu-0-3-background = ${colors.yel}
menu-0-3-foreground = ${colors.lbg}
menu-0-3-exec = systemctl reboot, mode "default"
menu-0-4 = "Power Off"
menu-0-4-padding = 2
menu-0-4-background = ${colors.red}
menu-0-4-foreground = ${colors.lbg}
menu-0-4-exec = systemctl poweroff -i, mode "default"
