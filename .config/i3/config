# vim:filetype=i3
# i3 config file (v4)

# General settings
# ================
set $mod Mod4

# Common tools
set $term xfce4-terminal
set $browser firefox
set $fm thunar
set $fmterm xfce4-terminal -x ranger
set $rss xfce4-terminal -x newsbeuter
set $mail xfce4-terminal -x mutt
set $music xfce4-terminal -x cmus

# Colour scheme
# Hinterland - https://protesilaos.com/hinterland
set $dbg #12171B 
set $dhl #22272B 
set $dt2 #60604f
set $dt1 #8aa0a4
set $lbg #f9f8fc
set $lhl #e9e8ec 
set $lt2 #768592
set $lt1 #3d463f
set $red #983f16 
set $ora #9e6c3d 
set $yel #b09020 
set $gre #3D814C 
set $cya #01917b 
set $blu #217ab3 
set $vio #7d6cab 
set $mag #ad5c5b 

# Fonts
font pango:DejaVu Sans Mono 8

# i3 config file
bindsym $mod+Mod1+c reload
bindsym $mod+Mod1+r restart

# Window settings
# ===============
workspace_auto_back_and_forth yes
force_display_urgency_hint 0 ms
focus_on_window_activation urgent
focus_follows_mouse no

# Auxiliary windows
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable

# Window states
# order: BORDER BACKGROUND FOREGROUND INDICATOR CHILD_BORDER
client.focused $dhl $dbg $dt2 $red $ora
client.unfocused $dbg $dbg $lt1 $dbg $dbg
client.focused_inactive $dbg $dbg $lt2 $dbg $dbg
client.urgent $red $red $dhl $red $red
client.background $dhl

# Decorations and gaps
for_window [class="^.*"] border pixel 2
# new_window 1pixel
smart_borders on
gaps inner 15
gaps outer 5

# Use Mouse+Mod1 (Alt) to drag floating windows to their wanted position
floating_modifier Mod1

# split in horizontal orientation
bindsym Mod1+h split h

# split in vertical orientation
bindsym Mod1+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# kill focused window
bindsym $mod+q kill
bindsym Ctrl+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Mod1+h move left
bindsym $mod+Mod1+j move down
bindsym $mod+Mod1+k move up
bindsym $mod+Mod1+l move right

# toggle tiling / floating
bindsym $mod+Mod1+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Workspace management
# ====================
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Mod1+1 move container to workspace $ws1
bindsym $mod+Mod1+2 move container to workspace $ws2
bindsym $mod+Mod1+3 move container to workspace $ws3
bindsym $mod+Mod1+4 move container to workspace $ws4
bindsym $mod+Mod1+5 move container to workspace $ws5
bindsym $mod+Mod1+6 move container to workspace $ws6
bindsym $mod+Mod1+7 move container to workspace $ws7
bindsym $mod+Mod1+8 move container to workspace $ws8
bindsym $mod+Mod1+9 move container to workspace $ws9
bindsym $mod+Mod1+0 move container to workspace $ws10

# move focused container to workspace and switch to it
bindsym Ctrl+$mod+Mod1+1 move container to workspace $ws1, workspace $ws1
bindsym Ctrl+$mod+Mod1+2 move container to workspace $ws2, workspace $ws2
bindsym Ctrl+$mod+Mod1+3 move container to workspace $ws3, workspace $ws3
bindsym Ctrl+$mod+Mod1+4 move container to workspace $ws4, workspace $ws4
bindsym Ctrl+$mod+Mod1+5 move container to workspace $ws5, workspace $ws5
bindsym Ctrl+$mod+Mod1+6 move container to workspace $ws6, workspace $ws6
bindsym Ctrl+$mod+Mod1+7 move container to workspace $ws7, workspace $ws7
bindsym Ctrl+$mod+Mod1+8 move container to workspace $ws8, workspace $ws8
bindsym Ctrl+$mod+Mod1+9 move container to workspace $ws9, workspace $ws9
bindsym Ctrl+$mod+Mod1+0 move container to workspace $ws10, workspace $ws10

# i3 modalities
# =============

# Dynamic gaps
set $mode_gaps Gaps: (o) outer, (i) inner
set $mode_gaps_outer Outer Gaps: o = +5 / i=-5 / u = 0 (local), O = +5 / I = -5 / U = 0 (global)
set $mode_gaps_inner Inner Gaps: o = +5 / i=-5 / u = 0 (local), O = +5 / I = -5 / U = 0 (global)

mode "$mode_gaps" {
        bindsym o      mode "$mode_gaps_outer"
        bindsym i      mode "$mode_gaps_inner"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
        bindsym o  gaps inner current plus 5
        bindsym i  gaps inner current minus 5
        bindsym u  gaps inner current set 0

        bindsym O  gaps inner all plus 5
        bindsym I  gaps inner all minus 5
        bindsym U  gaps inner all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
mode "$mode_gaps_outer" {
        bindsym o  gaps outer current plus 5
        bindsym i  gaps outer current minus 5
        bindsym u  gaps outer current set 0

        bindsym O  gaps outer all plus 5
        bindsym I  gaps outer all minus 5
        bindsym U  gaps outer all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+g mode "$mode_gaps"

# Dynamic window resize
set $mode_resize Resize: (h) horizontal, (v) vertical
set $mode_resize_vertical Width: (i) reduce, (o) increase
set $mode_resize_horizontal Height: (i) reduce, (o) increase

mode "$mode_resize" {
        bindsym v      mode "$mode_resize_vertical"
        bindsym h      mode "$mode_resize_horizontal"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

mode "$mode_resize_vertical" {
        bindsym i resize shrink width 10 px or 10 ppt
        bindsym o resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
mode "$mode_resize_horizontal" {
        bindsym i resize shrink height 10 px or 10 ppt
		bindsym o resize grow height 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "$mode_resize"

# Session management
set $mode_system System (l) lock, (s) switch users, (w) logout, (r) reboot, (q) shutdown

mode "$mode_system" {
    bindsym l exec --no-startup-id "bash ~/.config/i3/lock.sh"
    bindsym s exec --no-startup-id "dm-tool switch-to-greeter"
    bindsym w exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym q exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+p mode "$mode_system"

# Quick launchers
# NOTE work in progress
set $quicklaunchers Launch (1) Thunar, (2) Firefox, (3) Newsbeuter, (4) Mutt, (5) Cmus, (r) Ranger

mode "$quicklaunchers" {
    bindsym 1 exec $fm
    bindsym 2 exec $browser
    bindsym 3 exec $rss
    bindsym 4 exec $mail
    bindsym 5 exec $music
    bindsym r exec $fmterm

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+x mode "$quicklaunchers"

# i3 bar and statusline
# =====================
bar {
        status_command i3blocks
        height 20
        tray_output none
        position top
        font pango:DejaVu Sans Mono 9
        separator_symbol "/"

        colors {
            background $dbg
            statusline $dt2
            separator $lt1
            
            # BORDER BACKGROUND FOREGROUND
            focused_workspace $lt1 $dhl $dt1
            active_workspace $dhl $dbg $dt2
            inactive_workspace $dhl $dbg $lt1
            urgent_workspace $ora $ora $dbg
        }
}

# Applications
# ============
bindsym $mod+w exec $term
bindsym Mod1+w exec $term

# Application shortcuts
bindsym Mod1+1 exec $fm
bindsym Mod1+2 exec $browser
bindsym Mod1+3 exec $rss
bindsym Mod1+4 exec $mail
bindsym Mod1+5 exec $music
bindsym Mod1+r exec $fmterm

# App launcher menu
bindsym $mod+Return exec --no-startup-id rofi -show run

# Application placement
assign [class="^Gimp"] $ws5
assign [class="^Chromium"] $ws6

# Controls and utilities
# ======================

# Screenshot
bindsym Print exec --no-startup-id "xfce4-screenshooter"

# Pulse Audio volume
bindsym Mod1+x exec amixer set Master 5%+
bindsym Mod1+z exec amixer set Master 5%-

# Media player controls
bindsym Mod1+a exec "cmus-remote -u"
bindsym Mod1+d exec "cmus-remote -n"
bindsym Mod1+s exec "cmus-remote -r"

# Autostart
exec --no-startup-id compton -b
exec --no-startup-id "unclutter"
exec --no-startup-id "setxkbmap -option compose:rctrl"
exec --no-startup-id feh --bg-scale ~/.config/i3/wallpaper.jpg   
exec_always --no-startup-id "setxkbmap -layout 'us,gr' -option 'grp:alt_shift_toggle'"
exec --no-startup-id "/usr/bin/xcalib -d :0 /usr/share/color/icc/colord/Gamma5500K.icc"
exec --no-startup-id "eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)"
