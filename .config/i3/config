# vim:filetype=i3
# i3 config file (v4)

# General settings
# ================
set $mod Mod4

# Common tools
set $term urxvt
set $browser firefox-nightly
set $fm urxvt -e ranger
set $rss urxvt -e newsboat
set $mail urxvt -e neomutt
set $music urxvt -e ncmpcpp
set $podcast urxvt -e podboat -a
set $calc urxvt -e calc

# Colour scheme
# Default website theme
# https://protesilaos.com/
set $dbg #07040A
set $dhl #221a25
set $dt2 #898440
set $dt1 #9eb0b5
set $lbg #f9f9f9
set $lhl #e9e9e9
set $lt2 #4b5d6b
set $lt1 #202819
set $red #DD3816
set $ora #BE5A14
set $yel #897600
set $gre #1A891C
set $cya #437E93
set $blu #3575D4
set $vio #8764C4
set $mag #DC3259

# Fonts
font pango:DejaVu Sans Mono 8

# i3 config file
bindsym $mod+Mod1+c reload
bindsym $mod+Mod1+r restart

# Window settings
# ===============
workspace_auto_back_and_forth yes
force_display_urgency_hint 0 ms
focus_on_window_activation urgent
focus_follows_mouse no

# Auxiliary windows
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
for_window [class="Pavucontrol"] floating enable

# Window states
# order: BORDER BACKGROUND FOREGROUND INDICATOR CHILD_BORDER
client.focused $dhl $dbg $dt2 $red $gre
client.unfocused $dbg $dbg $lt1 $dbg $dbg
client.focused_inactive $dbg $dbg $lt2 $dbg $dbg
client.urgent $red $red $dhl $red $red
client.background $dhl

# Decorations and gaps
for_window [class="^.*"] border pixel 2
# new_window 1pixel
smart_borders on
gaps inner 10
gaps outer 1

# Use Mouse+Mod1 (Alt) to drag floating windows to their wanted position
floating_modifier Mod1

# split in vertical orientation
bindsym $mod+s split v

# split in horizontal orientation
bindsym $mod+Shift+s split h

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# kill focused window
bindsym $mod+q kill
bindsym Ctrl+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Mod1+h move left
bindsym $mod+Mod1+j move down
bindsym $mod+Mod1+k move up
bindsym $mod+Mod1+l move right

# toggle tiling / floating
bindsym $mod+Mod1+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Workspace management
# ====================
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Mod1+1 move container to workspace $ws1
bindsym $mod+Mod1+2 move container to workspace $ws2
bindsym $mod+Mod1+3 move container to workspace $ws3
bindsym $mod+Mod1+4 move container to workspace $ws4
bindsym $mod+Mod1+5 move container to workspace $ws5
bindsym $mod+Mod1+6 move container to workspace $ws6
bindsym $mod+Mod1+7 move container to workspace $ws7
bindsym $mod+Mod1+8 move container to workspace $ws8
bindsym $mod+Mod1+9 move container to workspace $ws9
bindsym $mod+Mod1+0 move container to workspace $ws10

# move focused container to workspace and switch to it
bindsym Ctrl+$mod+Mod1+1 move container to workspace $ws1, workspace $ws1
bindsym Ctrl+$mod+Mod1+2 move container to workspace $ws2, workspace $ws2
bindsym Ctrl+$mod+Mod1+3 move container to workspace $ws3, workspace $ws3
bindsym Ctrl+$mod+Mod1+4 move container to workspace $ws4, workspace $ws4
bindsym Ctrl+$mod+Mod1+5 move container to workspace $ws5, workspace $ws5
bindsym Ctrl+$mod+Mod1+6 move container to workspace $ws6, workspace $ws6
bindsym Ctrl+$mod+Mod1+7 move container to workspace $ws7, workspace $ws7
bindsym Ctrl+$mod+Mod1+8 move container to workspace $ws8, workspace $ws8
bindsym Ctrl+$mod+Mod1+9 move container to workspace $ws9, workspace $ws9
bindsym Ctrl+$mod+Mod1+0 move container to workspace $ws10, workspace $ws10

# Stop/hide everything
bindsym Ctrl+Mod1+Delete workspace 0; exec $term -e htop; exec $term -e ranger

# i3 window drawing and modalities
# ================================

# Dynamic window resize
bindsym $mod+i resize shrink width 10 px or 10 ppt
bindsym $mod+o resize grow width 10 px or 10 ppt
bindsym $mod+Shift+i resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+o resize grow height 10 px or 10 ppt

# Session management
set $mode_system System (l) lock, (s) switch users, (w) logout, (r) reboot, (q) shutdown

mode "$mode_system" {
    bindsym l exec --no-startup-id "bash ~/.config/i3/lock.sh"
    bindsym s exec --no-startup-id "dm-tool switch-to-greeter"
    bindsym w exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym q exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+p mode "$mode_system"

# Applications
# ============
bindsym $mod+Return exec $term
bindsym Mod1+Return exec $term

# Application shortcuts
bindsym Mod1+1 exec $fm
bindsym Mod1+2 exec $browser
bindsym Mod1+3 exec $rss
bindsym Mod1+4 exec $mail
bindsym Mod1+5 exec $music
bindsym Mod1+6 exec $podcast
bindsym Mod1+7 exec $calc

# App launcher menu
bindsym $mod+d exec --no-startup-id rofi -show run

# Application placement
assign [class="^Atom"] $ws2
assign [class="^libreoffice"] $ws3
assign [class="^Gimp"] $ws5
assign [class="^Chromium"] $ws6

# Controls and utilities
# ======================

# Screenshot
## Focused window
bindsym Print exec scrot -u -z '%Y-%m-%d_%H:%M:%S_$wx$h$n.png' -e 'mv $f ~/Desktop'
## Full screen
bindsym $mod+Print exec scrot -z '%Y-%m-%d_%H:%M:%S_$wx$h.png' -e 'mv $f ~/Desktop'

# Volume
set $mute --no-startup-id amixer sset Master toggle
set $volumeup --no-startup-id amixer set Master 5%+
set $volumedown --no-startup-id amixer set Master 5%-

bindsym Mod1+x exec $volumeup
bindsym Mod1+z exec $volumedown
bindsym XF86AudioMute exec $mute
bindsym XF86AudioRaiseVolume exec $volumeup
bindsym XF86AudioLowerVolume exec $volumedown

# Media player controls
bindsym Mod1+a exec --no-startup-id mpc toggle
bindsym Mod1+s exec --no-startup-id mpc prev
bindsym Mod1+d exec --no-startup-id mpc next

# Autostart
exec_always --no-startup-id mpd
exec --no-startup-id unclutter
exec --no-startup-id compton -b
exec_always --no-startup-id "setxkbmap -option compose:rwin"
exec_always --no-startup-id ~/.config/polybar/launch.sh
exec --no-startup-id feh --bg-fill ~/.config/i3/wallpaper.jpg   
exec_always --no-startup-id "setxkbmap -layout 'us,gr' -option 'grp:alt_shift_toggle'"
exec_always --no-startup-id "/usr/bin/xcalib -d :0 /usr/share/color/icc/colord/Gamma5500K.icc"
exec --no-startup-id "eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)"
